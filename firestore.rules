rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Kullanıcı profilleri koleksiyonu için kurallar
    // Bu kural, yalnızca kimliği doğrulanmış kullanıcıların kendi UID'leriyle eşleşen
    // belgeyi okumasına ve yazmasına (oluşturma, güncelleme, silme) izin verir.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Uygulamanızdaki diğer tüm koleksiyonlar ve belgeler için varsayılan kural
    // Bu kural, yukarıdaki 'users' koleksiyonu hariç, diğer tüm verilere
    // erişimi varsayılan olarak reddeder. Bu, uygulamanızın güvenliğini artırır.
    // Yeni koleksiyonlar ekledikçe, bunlar için buraya daha spesifik kurallar eklemelisiniz.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
